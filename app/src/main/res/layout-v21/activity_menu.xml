<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7bd9f9"
        tools:context="tw.edu.ntu.csie.kurokuma.sync.MainActivity"
        android:id="@+id/container">

        <Button
            android:id="@+id/num_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="enter your hash"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_gravity="right|top" />

        <Button
            android:id="@+id/URL_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="change URL"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:id="@+id/player"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/URL_btn"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_gravity="center_horizontal|top"
            android:background="#ff8000"
            android:text="username"
            android:layout_marginTop="10dp"
            android:textSize="25sp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/playBtnTank"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:onClick="goPlayTank"
            android:transitionName="@string/blue_transitionName"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#0099cc"
            fancy:fb_focusColor="#19c2df"
            fancy:fb_iconResource="@drawable/tank"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Start Tank"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="30sp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/playBtn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:onClick="goPlay"
            android:transitionName="@string/blue_transitionName"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#0099cc"
            fancy:fb_focusColor="#19c2df"
            fancy:fb_iconResource="@drawable/shooter"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Start Shooter"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="30sp"
            android:layout_marginBottom="75dp" />

    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
